doctype html
html
    head
        title #{title}
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
        
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            .container
                a.navbar-brand(href='/') Testing Node
                button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarsExample07' aria-controls='navbarsExample07' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbar.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        li.nav-item.active
                            a.nav-link(href='/') Articles 
                        if user 
                            li.nav-item
                                a.nav-link(href='/articles/add') Add Article
                
                ul.navbar-nav.mr-auto
                    if user 
                        li.nav-item
                                a.nav-link(href='/users/logout') Log Out
                    else
                        li.nav-item
                                a.nav-link(href='/users/register') Register
                        li.nav-item
                                a.nav-link(href='/users/login') Log In
        .container
            != messages('message', locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}

            block content 
            br
            hr
            footer 
                p Copyrights &copy; 2021
        script(src="/bower_components/jquery/dist/jquery.js") 
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous") 
        script(src="/bower_components/bootstrap/dist/js/bootstrap.js") 
        script(src="/js/main.js")